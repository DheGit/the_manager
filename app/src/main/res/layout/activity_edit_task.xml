<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.activity.task.EditTaskActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_edit_task"
        android:background="@color/colorTaskTb"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:elevation="@dimen/space_small"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <FrameLayout
        android:id="@+id/fl_edit_task"
        android:layout_below="@id/tb_edit_task"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>