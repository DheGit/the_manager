<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.activity.master.MasterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_master"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/space_small"/>

    <RelativeLayout
        android:layout_below="@id/tb_master"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_get_user_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/space_big"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_users_action"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_5" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_add_user"
            android:layout_below="@id/ll_get_user_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/space_big"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_user_action"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_5" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>