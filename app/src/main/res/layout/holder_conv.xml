<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/space_phenomenal"
    android:background="?android:attr/selectableItemBackground"
    >

    <RelativeLayout
        android:layout_marginTop="@dimen/space_small"
        android:layout_marginStart="@dimen/space_big"
        android:layout_marginLeft="@dimen/space_big"
        android:layout_marginBottom="@dimen/space_small"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_partner_name"
            android:text="Partner Name"
            android:textSize="@dimen/text_size_3"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_last_razgo"
            android:layout_below="@id/tv_partner_name"
            android:layout_marginTop="@dimen/space_small"
            android:text="LastMessageLastMessage"
            android:maxLines="1"
            android:maxLength="30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_last_time"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/tv_partner_name"
            android:layout_marginRight="@dimen/space_normal"
            android:layout_marginEnd="@dimen/space_normal"
            android:text="23-05-2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</RelativeLayout>